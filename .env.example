# ─── Required ────────────────────────────────────────────────────────────────

# Rootly webhook signing secret (from Rootly → Webhooks → Signing Secret)
ROOTLY_WEBHOOK_SECRET=your_rootly_webhook_secret_here

# Zabbix API URL(s). Comma-separate multiple URLs for failover.
ZABBIX_URL=https://your-zabbix-instance/api_jsonrpc.php

# Zabbix API authentication token (Zabbix 5.4+)
ZABBIX_TOKEN=your_zabbix_api_token_here

# ─── Optional ────────────────────────────────────────────────────────────────

# Dot-notation path to Zabbix event ID in Rootly payload (overrides auto-detection)
# ZABBIX_EVENTID_PATH=data.custom_fields.zabbix_event_id

# Rootly API token (reserved for future use)
# ROOTLY_API_TOKEN=your_rootly_api_token_here

# Whether resolving an incident in Rootly closes it in Zabbix (default: true)
# ROOTLY_RESOLVE_CLOSES_ZABBIX=true

# Whether changing incident severity in Rootly updates it in Zabbix (default: true)
# ROOTLY_SEVERITY_UPDATES_ZABBIX=true

# Override the built-in Rootly→Zabbix severity mapping (JSON object)
# ROOTLY_SEVERITY_MAP={"critical":5,"high":4,"medium":3,"low":2,"informational":1}

# Flask listen port (default: 5000)
# PORT=5000

# Enable verbose logging — WARNING: may log tokens (default: false)
# DEBUG=false
