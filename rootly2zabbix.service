[Unit]
Description=rootly2zabbix â€” Rootly to Zabbix webhook bridge
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/rootly2zabbix
ExecStart=/home/ubuntu/rootly2zabbix/venv/bin/gunicorn -w 2 -b 0.0.0.0:5000 main:app
Restart=on-failure
